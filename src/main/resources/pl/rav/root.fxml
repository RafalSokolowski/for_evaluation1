<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane fx:id="root"
            fx:controller="pl.rav.control.RootController"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@css/root.css">

    <top>
        <HBox styleClass="top">
            <Label text="Avatar Vs. Avatar"/>
            <Label text="Turn no: "/>
            <Label text="Game time: "/>
            <Label text="Save"/>
            <Label text="Upload"/>
        </HBox>
    </top>

    <left>
        <VBox styleClass="left" alignment="CENTER">
            <ImageView fx:id="avatar"/>
            <Label fx:id="nick" text="Name: "/>
            <Label text="Race: "/>
            <Label text="Color: "/>
            <Label text="Points: "/>
        </VBox>
    </left>

    <right>
        <VBox styleClass="right">
            <Label text="AVATAR"/>
            <Label text="Name: "/>
            <Label text="Race: "/>
            <Label text="Color: "/>
            <Label text="Points: "/>
        </VBox>
    </right>

    <bottom>
        <HBox styleClass="bottom">
            <Label text="START"/>
            <!--    <Button fx:id="fight" styleClass="fight" prefWidth="30" onAction="#selectNewFile">-->
            <Button styleClass="fight" onAction="#goToTheBattle">
                <graphic>
                    <ImageView>
                        <Image url="@graphics/buttons/fight_axe.png" preserveRatio="true" requestedHeight="40"/>
                    </ImageView>
                </graphic>
            </Button>
            <Label text="BATTLE"/>
        </HBox>
    </bottom>


    <center>
        <GridPane styleClass="center">

        </GridPane>
    </center>


</BorderPane>


