<BorderPane fx:id="root"
            fx:controller="pl.rav.control.RootController"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@css/root.css">

    <top>
        <HBox styleClass="top">
            <Label fx:id="playerVsPlayer"/>
            <Label text="Turn no: "/>
            <Label text="Game time: "/>
            <Label text="Save"/>
            <Label text="Upload"/>
        </HBox>
    </top>


    <left>
        <VBox>
            <VBox styleClass="left" alignment="TOP_CENTER">
                <ImageView fx:id="avatarLeft"/>
            </VBox>
            <!-- TODO: zrobić tabelę zamiast HBox / VBox -->
            <VBox styleClass="left">
                <HBox>
                    <Label styleClass="player" text="Nick :"/>
                    <Label styleClass="player" fx:id="nickLeft"/>
                </HBox>
                <HBox>
                    <Label styleClass="player" text="Race :"/>
                    <Label styleClass="player" fx:id="raceLeft"/>
                </HBox>
                <HBox>
                    <Label styleClass="player" text="Color :"/>
                    <Label styleClass="playerColorBlue" text="BLUE"/>
                </HBox>
                <HBox>
                    <Label styleClass="player" text="Score :"/>
                    <Label styleClass="player" fx:id="scoreLeft"/>
                </HBox>
            </VBox>
        </VBox>
    </left>


    <right>
<!--        <VBox styleClass="right">-->
<!--            <Label text="AVATAR"/>-->
<!--            <Label text="Name: "/>-->
<!--            <Label text="Race: "/>-->
<!--            <Label text="Color: "/>-->
<!--            <Label text="Points: "/>-->
<!--        </VBox>-->
        <VBox>
            <VBox styleClass="left" alignment="TOP_CENTER">
                <ImageView fx:id="avatarRight"/>
            </VBox>
            <!-- TODO: zrobić tabelę zamiast HBox / VBox -->
            <VBox styleClass="left">
                <HBox>
                    <Label styleClass="player" text="Nick :"/>
                    <Label styleClass="player" fx:id="nickRight"/>
                </HBox>
                <HBox>
                    <Label styleClass="player" text="Race :"/>
                    <Label styleClass="player" fx:id="raceRight"/>
                </HBox>
                <HBox>
                    <Label styleClass="player" text="Color :"/>
                    <Label styleClass="playerColorRed" text="RED"/>
                </HBox>
                <HBox>
                    <Label styleClass="player" text="Score :"/>
                    <Label styleClass="player" fx:id="scoreRight"/>
                </HBox>
            </VBox>
        </VBox>
    </right>

    <bottom>
        <HBox styleClass="bottom">
            <Label text="START"/>
            <!--    <Button fx:id="fight" styleClass="fight" prefWidth="30" onAction="#selectNewFile">-->
            <Button styleClass="fight" onAction="#goToTheBattle">
                <graphic>
                    <ImageView>
                        <Image url="@graphics/buttons/fight_axe.png" preserveRatio="true" requestedHeight="40"/>
                    </ImageView>
                </graphic>
            </Button>
            <Label text="BATTLE"/>
        </HBox>
    </bottom>


    <center>
        <GridPane styleClass="center">

        </GridPane>
    </center>


</BorderPane>


